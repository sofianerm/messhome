modules = ["nodejs-22"]
run = "cd apps/web && npm install && npm run build && npm start"

[nix]
channel = "stable-24_05"

[deployment]
run = ["bash", "-c", "cd apps/web && PORT=5000 npm run start"]
deploymentTarget = "autoscale"
build = ["bash", "-c", "cd apps/web && npm run build"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 4000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
